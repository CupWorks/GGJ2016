<Page
    x:Class="Game.Client.UWA.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwa="using:Game.Client.UWA"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
               Width="{Binding ActualWidth, ElementName=RootCanvas}"
               Height="{Binding ActualHeight, ElementName=RootCanvas}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CommandBar Grid.Row="0"  Grid.ColumnSpan="2">
            <AppBarButton Icon="Refresh" Label="History" />
        </CommandBar>
        <RichTextBlock Margin="10" Grid.Row="1" Grid.Column="0" Name="RichTextBlock" />
        <TextBox Margin="10" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="TextBox" />
        <ListBox Grid.Row="1" Grid.Column="1" Name="HistoryListBox" />
    </Grid>
</Page>
